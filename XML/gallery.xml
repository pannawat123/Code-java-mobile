<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Gallery Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallery Picture"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton01"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#6E6C6C"
            android:scaleType="fitCenter"
            android:src="@drawable/example_1" />


        <ImageButton
            android:id="@+id/imageButton02"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/dudipatsar_lake"
            android:scaleType="fitCenter"
            tools:src="@drawable/example_2" />

        <ImageButton
            android:id="@+id/imageButton03"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/example_3" />


        <ImageButton
            android:id="@+id/imageButton04"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/example_4" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton05"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#6E6C6C"
            android:scaleType="fitCenter"
            android:src="@drawable/example_5" />

        <ImageButton
            android:id="@+id/imageButton06"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/example_6" />


        <ImageButton
            android:id="@+id/imageButton07"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/example_7" />


        <ImageButton
            android:id="@+id/imageButton08"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/example_8" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView01"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_weight="0"
            android:background="#ACACAC"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/example_1"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>

    <!-- Thumbnails Grid -->

    <!-- Large Image Display -->

</LinearLayout>
